        {% if changes[0]['google_description_change'] %}
            <span class="label label-success">Google description</span>
            <table width="100%">
                <tr>
                    <td width="50%" valign="top">
                        <h5>Before</h5>
                        {{ changes[1]['google_description'] }}
                    </td>
                    <td width="50%" valign="top">
                        <h5>After</h5>
                        {{ changes[0]['google_description'] }}
