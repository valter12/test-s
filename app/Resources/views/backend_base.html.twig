<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="../../css/style.css" rel="stylesheet" type="text/css" />
            <link href="../../css/bootstrap.css" rel="stylesheet" type="text/css" />
        {% endblock %}
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span2" style="width:175px;">
                    {% block left_menu %}
                        <ul class="nav nav-list" style="margin-top: 22px;">
                            <li>
                                <a href="javascript:;" onclick="$('#users_submenu').toggle();"><i class="icon-user"></i>Users</a>
                                <div style="display:none;" id="users_submenu">
                                    <ul class="nav nav-list" style="margin-bottom:">
                                        <li>
                                            <a style="margin:0" href="{{ path('BackendBackendBundle_user') }}">List</a>
                                        </li>
                                        <li>
                                            <a style="margin:0" href="{{ path('BackendBackendBundle_user_charts') }}">Statistics</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <a href="javascript:;" onclick="$('#projects_submenu').toggle();"><i class="icon-list-alt"></i>Projects</a>
                                <div style="display:none;" id="projects_submenu">
                                    <ul class="nav nav-list" style="margin-bottom:">
                                        <li>
                                            <a style="margin:0" href="{{ path('BackendBackendBundle_project_stats') }}">Statistics</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <a href="javascript:;" onclick="$('#trial_submenu').toggle();"><i class="icon-tint"></i>Trial domains</a>
                                <div style="display:none;" id="trial_submenu">
                                    <ul class="nav nav-list" style="margin-bottom:">
                                        <li>
                                            <a style="margin:0" href="{{ path('BackendBackendBundle_trial_domains') }}">List</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <a href="javascript:;" onclick="$('#logs_submenu').toggle();"><i class="icon-eye-open"></i>Logs</a>
                                <div style="display:none;" id="logs_submenu">
                                    <ul class="nav nav-list" style="margin-bottom:">
                                        <li>
                                            <a style="margin:0" href="">Errors</a> 
                                        </li>
                                        <li>
                                            <a style="margin:0" href="">Critical errors</a> 
                                        </li>
                                        <li>
                                            <a style="margin:0" href="">Graphs</a> 
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <a href="javascript:;" onclick="$('#payments_submenu').toggle();"><i class="icon-gift"></i>Payments</a>
                                <div style="display:none;" id="payments_submenu">
                                    <ul class="nav nav-list" style="margin-bottom:">
                                        <li>
                                            <a style="margin:0" href="{{ path('BackendBackendBundle_all_payments') }}">List</a> 
                                        </li>
                                        <li>
                                            <a style="margin:0" href="">Graphs</a> 
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <a href="{{ path('BackendBackendBundle_logout') }}"><i class="icon-off"></i>Logout</a>
                            </li>
                        </ul>
                    {% endblock %}
                </div>
                <div class="span10">
                    {% if app.session.hasFlash('notice') %}
                        <div class="sep"></div>
                        <div class="flash-notice alert alert-success">
                            {{ app.session.flash('notice') }}
                        </div>
                    {% endif %}
                    {% if app.session.hasFlash('error') %}
                        <div class="sep"></div>
                        <div class="flash-danger alert alert-danger">
                            {{ app.session.flash('error') }}
                        </div>
                    {% endif %}
                    <div class="sep"></div>
                    <div class="sep"></div>
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
            
        {% block javascripts %}
             <script src="{{ asset('js/bootstrap.js') }}"></script>
             <script src="{{ asset('js/bootstrap-popover.js') }}"></script>
             <script src="{{ asset('js/common.js') }}"></script>
             <script>ajax_url = "{{ path('ajax') }}"</script>
        {% endblock %}
        {% block inline_javascripts %}
        {% endblock %}
         <div id="modal_placeholder"></div>
    </body>
</html>
