<div class="modal hide" id="modal_box">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h3>Notes for "{{ keyword_data.keyword }}" keyword</h3>
    </div>
        <div class="modal-body">
            {% if keyword_notes|length %}
                <table class="table table_align_left">
                    <tr>
                        <th width="100">Date</th>
                        <th>Note</th>
                        <th style="text-align:center !important;">Options</th>
                    </tr>
                    {% for item in keyword_notes %}
                        <tr>
                            <td>{{ item.date_of_track }}</td>
                            <td>{{ item.note }}</td>
                            <td>
                                <ul class="nav nav-pills" style="margin:0 auto;width:78px;">
                                    <li class="dropdown">
                                        <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
                                            Options
                                            <b class="caret"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a href=""><i class="icon-edit"></i>&nbsp;Modify</a></li>
                                            <li><div class="divider"></div></li>
                                            <li><a href="{{ path('account_delete_keyword_note') }}?note_id={{ item.id }}" onclick='return confirm("Please confirm that you want to delete this note");'><i class="icon-trash"></i>&nbsp;Delete</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            {% endif %}
            <form action="{{ path('account_modify_add_keyoword_note') }}" method="post" style="margin:0">
                <label for="note">Note</label>
                <input type="text" name="note" id="note">
                <div class="sep"></div>
                <input type="hidden" value="{{ keyword_data.id }}" name="keyword_id">
                <input type="hidden" value="{{ app.request.get('for_date') }}" name="for_date">
                <input type="hidden" value="new" name="todo">
                <input type="submit" class="btn btn-primary" value="Save note">
            </form>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
        </div>
</div>
<script>
    jQuery(document).ready(function(){
        jQuery('.dropdown-toggle').dropdown();
    });
</script>
<style>
        .table_align_left th, .table_align_left td {
            text-align: left !important;
        }
        .table_align_left th {
            border: medium none;
        }
</style>