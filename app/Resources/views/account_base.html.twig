<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="../css/style.css" rel="stylesheet" type="text/css" />
            <link href="../css/bootstrap.css" rel="stylesheet" type="text/css" />
        {% endblock %}
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span2" style="width:154px;">
                    {% block left_menu %}
                        <ul class="nav nav-list" style="margin-top: 6px;">
                            <li>
                                <a href="{{ path('account_dashboard') }}"><i class="icon-th"></i>Dashboard</a>
                            </li>
                            <li>
                                <a href="{{ path('account_projects') }}"><i class="icon-list-alt"></i>Projects</a>
                            </li>
                            <li>
                                <a href="{{ path('account_project_details') }}"><i class="icon-align-left"></i>Project stats</a>
                            </li>
                            <li>
                                <a href="{{ path('account_project_categories') }}"><i class="icon-indent-right"></i>Project categories</a>
                            </li>
                            <li>
                                <a href="{{ path('account_keywords') }}"><i class="icon-screenshot"></i>Keywords</a>
                            </li>
                            <li>
                                <a href="javascript:;" onclick="jQuery('#competitor_submenu').toggle();"><i class="icon-random"></i>Competitors</a>
                                <div style="display:none; margin-left:20px;" id="competitor_submenu">
                                    <a href="{{ path('account_competitors') }}" style="padding:4px; display:block;">Competitor list</a>
                                    <a href="{{ path('account_competitor_details') }}" style="padding:4px; display:block;">Competitor stats</a>
                                </div>
                            </li>
                            <li>
                                <a href="javascript:;" onclick="jQuery('#charts_submenu').toggle();"><i class="icon-signal"></i>Charts</a>
                                <div style="display:none; margin-left:20px;" id="charts_submenu">
                                    <a href="{{ path('account_keyword_charts') }}" style="padding:4px; display:block;">Keyword charts</a>
                                    <a href="{{ path('account_comparative_charts') }}" style="padding:4px; display:block;">Comparative charts</a>
                                </div>
                            </li>
                            <li>
                                <a href="{{ path('account_report_list') }}"><i class="icon-tasks"></i>Scheduled reports</a>
                            </li>
                            <li>
                                <a href="{{ path('account_uptime') }}"><i class="icon-time"></i>Uptime</a>
                            </li>
                            <li>
                                <a href="{{ path('account_settings') }}"><i class="icon-wrench"></i>Account settings</a>
                            </li>
                            <li>
                                <a href="{{ path('logout') }}"><i class="icon-off"></i>Logout</a>
                            </li>
{#
                            <li>
                                <a href=""><i class="icon-book"></i>Knowledge-base</a>
                            </li>
                            <li>
                                <a href=""><i class="icon-inbox"></i>Submit a ticket</a>
                            </li>
                            <li>
                                <a href=""><i class="icon-circle-arrow-up"></i>Upgrade account</a>
                            </li>
#}
                        </ul>
                    {% endblock %}
                </div>
                <div class="span10">
                    {% if app.session.hasFlash('notice') %}
                        <div class="sep"></div>
                        <div class="flash-notice alert alert-success">
                            {{ app.session.flash('notice') }}
                        </div>
                    {% endif %}
                    {% if app.session.hasFlash('error') %}
                        <div class="sep"></div>
                        <div class="flash-danger alert alert-danger">
                            {{ app.session.flash('error') }}
                        </div>
                    {% endif %}
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
            
        {% block javascripts %}
             <script src="{{ asset('js/bootstrap.js') }}"></script>
             <script src="{{ asset('js/bootstrap-popover.js') }}"></script>
             <script src="{{ asset('js/common.js') }}"></script>
             <script>ajax_url = "{{ path('ajax') }}"</script>
        {% endblock %}
        {% block inline_javascripts %}
        {% endblock %}
         <div id="modal_placeholder"></div>
    </body>
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-33094290-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

      </script>
</html>
