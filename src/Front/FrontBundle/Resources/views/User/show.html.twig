<h1>User</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Fname</th>
            <td>{{ entity.fName }}</td>
        </tr>
        <tr>
            <th>Lname</th>
            <td>{{ entity.lName }}</td>
        </tr>
        <tr>
            <th>Pass</th>
            <td>{{ entity.pass }}</td>
        </tr>
        <tr>
            <th>Hasactivatedemail</th>
            <td>{{ entity.hasActivatedEmail }}</td>
        </tr>
        <tr>
            <th>Activationhash</th>
            <td>{{ entity.activationHash }}</td>
        </tr>
        <tr>
            <th>Haspayed</th>
            <td>{{ entity.hasPayed }}</td>
        </tr>
        <tr>
            <th>Isdeleted</th>
            <td>{{ entity.isDeleted }}</td>
        </tr>
        <tr>
            <th>Secrethash</th>
            <td>{{ entity.secretHash }}</td>
        </tr>
        <tr>
            <th>Nextpaydate</th>
            <td>{{ entity.nextPayDate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Added</th>
            <td>{{ entity.added|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
