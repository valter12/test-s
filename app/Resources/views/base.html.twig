<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="keywords" content="{% block keywords %}{% endblock %}" />
        <meta name="description" content="{% block description %}{% endblock %}" />
        {% block canonical %}{% endblock %}
        {% block stylesheets %}
            <link href="/css/style.css" rel="stylesheet" type="text/css" />
            <link href="/css/bootstrap.css" rel="stylesheet" type="text/css" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container-narrow">
            <div class="masthead">
                <ul class="nav nav-pills pull-right">
                    <li {% if app.request.attributes.get('_route') == 'homepage' %}class="active"{% endif %}><a href="{{ path('homepage') }}">Home</a></li>
                    <li {% if app.request.attributes.get('_route') == 'plans' %}class="active"{% endif %}><a href="{{ path('plans') }}">Plans</a></li>
                    <li {% if app.request.attributes.get('_route') == 'features' or app.request.attributes.get('_route') == 'feature_details' %}class="active"{% endif %}><a href="{{ path('features') }}">Features</a></li>
                    <li {% if app.request.attributes.get('_route') == 'login_register' %}class="active"{% endif %}><a href="{{ path('login_register') }}">Login/Register</a></li>
                </ul>
                <h3 class="muted"><a href="{{ path('homepage') }}" title="seo tracking tool">SEOwatchman.com</a></h3>
            </div>
            <hr>
            {% if app.session.hasFlash('notice') %}
                <div class="flash-notice alert alert-success">
                    {{ app.session.flash('notice')|raw }}
                </div>
            {% endif %}
            {% if app.session.hasFlash('error') %}
                <div class="flash-danger alert alert-danger">
                    {{ app.session.flash('error')|raw }}
                </div>
            {% endif %}
            {% block body %}{% endblock %}
            {% block javascripts %}
                 <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
                 <script src="{{ asset('js/bootstrap.js') }}"></script>
                 <script src="{{ asset('js/bootstrap-popover.js') }}"></script>
                 <script src="{{ asset('js/common.js') }}"></script>
            {% endblock %}
             <hr>
            <div class="footer">
                <p>&copy; SEOwatchman {{ now|date("Y") }} <a href="mailto:info@seowatchman.com" style="float:right;">info@seowatchman.com</a></p>
            </div>
        </div>
    </body>
    <script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-33094290-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</html>
