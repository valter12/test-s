<h1>User list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Fname</th>
            <th>Lname</th>
            <th>Pass</th>
            <th>Hasactivatedemail</th>
            <th>Activationhash</th>
            <th>Haspayed</th>
            <th>Isdeleted</th>
            <th>Secrethash</th>
            <th>Nextpaydate</th>
            <th>Added</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.fName }}</td>
            <td>{{ entity.lName }}</td>
            <td>{{ entity.pass }}</td>
            <td>{{ entity.hasActivatedEmail }}</td>
            <td>{{ entity.activationHash }}</td>
            <td>{{ entity.hasPayed }}</td>
            <td>{{ entity.isDeleted }}</td>
            <td>{{ entity.secretHash }}</td>
            <td>{% if entity.nextPayDate %}{{ entity.nextPayDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.added %}{{ entity.added|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('user_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
